class Solution {
public:
    bool closeStrings(string word1, string word2) {
        unordered_map<char, int> m1;
        unordered_map<char, int> m2;
        vector<int> s;
        vector<int> v;
        for (auto i : word1) {
            m1[i]++;
        }
        for (auto j : word2) {
            if(m1.find(j)==m1.end()) return false;
            m2[j]++;
        }
        for (auto n : m1) {
            s.push_back(n.second);
        }
        for (auto l : m2) {
            v.push_back(l.second);
        }
        sort(v.begin(), v.end());
        sort(s.begin(), s.end());
        return s == v;
    }
};
