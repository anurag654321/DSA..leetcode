class Solution {
public:
    int compress(vector<char>& chars) {
        string ans = "";
        char p = chars[0];
        int count = 0;
        
        for (char c : chars) {
            if (c == p) {
                count++;
            } else {
                ans += p;
                if (count > 1) {
                    ans += to_string(count);
                }
                p = c;
                count = 1;
            }
        }
        
        ans += p;
        if (count > 1) {
            ans += to_string(count);
        }

   
        for (int i = 0; i < ans.size(); i++) {
            chars[i] = ans[i];
        }
        
        return ans.size();
    }
};
